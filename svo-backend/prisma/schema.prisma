generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}

model action {
  id          Int      @id @default(autoincrement())
  type        String
  name_button String
  message     String?  @db.LongText
  url         String?  @db.LongText
  parent_id   Int?
  parent      action?  @relation("ActionTree", fields: [parent_id], references: [id])
  actions     action[] @relation("ActionTree")
}

model screen {
  id      Int    @id @default(autoincrement())
  code    String @unique
  message String @db.LongText
}

model faq {
  id          Int    @id @default(autoincrement())
  name_button String
  question    String @db.LongText
  answer      String @db.LongText
}
